generators:
  # ─── Student-t defaults ─────────────────────────────────────────────────────
  _students_t_default: &students_default
    generator: uot.problems.generators.StudentTGenerator
    dim:       1
    num_datasets: 31
    measure_mode: discrete
    cost_fn:   uot.utils.costs.cost_euclid_squared
    borders:   [-1, 1]
    seed:      55

{% set points_set = [32, 64, 128, 256, 512, 1024, 2048] %}
{% set df_set = [2, 4, 6] %}
{% for nu in df_set %}
{% for p in points_set %}
  1D-students-{{nu}}df-{{p}}p:
    <<: *students_default
    n_points: {{p}}
    nu: {{nu}}
{% endfor %}
{% endfor %}
