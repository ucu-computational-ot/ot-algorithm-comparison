generators:
  _gauss_default: &gauss_default
    generator: uot.problems.generators.GaussianMixtureGenerator
    dim: 2
    num_datasets: 30
    borders: [0, 1]
    # borders: [-1, 1]
    num_components: 1
    cost_fn: uot.utils.costs.cost_euclid_squared
    use_jax: false
    measure_mode: grid
    seed: 55

{% set points_set = [32, 64, 128, 160, 192, 256, 512, 1024] %}
{% for points in points_set %}
  2D-gaussian-1c-{{points}}p:
    <<: *gauss_default
    n_points: {{points}}
{% endfor %}
